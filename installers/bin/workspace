#!/bin/bash

create() {
    hdiutil create \
        -type SPARSE \
        -fs 'Case-sensitive Journaled HFS+' \
        -size 10g -volname ${NAME} ${LOCATION}
}

detach() {
    m=$(hdiutil info | grep "/Volumes/${NAME}" | cut -f1)
    if [ ! -z "$m" ]; then
        hdiutil detach $m
    fi
}

attach() {
    hdiutil attach ${LOCATION}
}

compact() {
    detach
    hdiutil compact ${LOCATION} -batteryallowed
    attach
}

ACTION=$1
LOCATION=$2
NAME=$3

case $ACTION in
    create) create;;
    attach) attach;;
    detach) detach;;
    compact) compact;;
    *) ;;
esac
