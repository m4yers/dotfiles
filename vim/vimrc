" Settings {{{
" Basic {{{

set encoding=utf-8
set backspace=indent,eol,start
set completeopt=longest,menuone
set clipboard=unnamed
set ambiwidth=single
set laststatus=2
set noshowmode
set ttimeoutlen=50
set wildmenu
set history=1000
set lazyredraw
set autowrite
set autoread
set splitbelow
set splitright

" }}}
" SnSnS {{{
" Scroll n Search n Substitute

set scrolloff=0
set sidescroll=1
set sidescrolloff=5

set ignorecase
set smartcase
set incsearch
set showmatch
set hlsearch

" }}}
" Special chars {{{

set list
set listchars=tab:â–¸\ ,extends:â¯,precedes:â®
" set listchars=tab:â–¸\ ,eol:Â¬,extends:â¯,precedes:â®
set showbreak=â†ª
if has("gui_running")
    set fillchars=diff:â£¿,vert:â”‚,fold:\ 
else
    set fillchars=diff:â£¿,vert:\|,fold:\ 
endif

